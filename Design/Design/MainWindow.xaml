<Window x:Class="Design.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Design"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="3"/>
            <RowDefinition/>
            <RowDefinition Height="26"/>
        </Grid.RowDefinitions>
        <Grid x:Name="Head">
            <StackPanel Orientation="Horizontal">
                <Image Source="/logo.jpg" Height="{Binding ElementName=Head, Path=ActualHeight}"/>
                <Label Content="NBA Management System" VerticalContentAlignment="Center"/>
            </StackPanel>
            <Label/>
            <Button Content="Back" HorizontalAlignment="Right" Height="20" Margin="10" Width="50"/>
        </Grid>
        <Rectangle Fill="Black" Grid.Row="1"/>
        <Grid Grid.Row="1">
           
        </Grid>
        <Label Grid.Row="3" Content="The current season is 2016-2017, and the NBA already has a history of 71 years." HorizontalContentAlignment="Center" VerticalContentAlignment="Center" DockPanel.Dock="Bottom" Background="#6995c2" Foreground="White"/>
    </Grid>
</Window>
